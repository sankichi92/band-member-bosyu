<%= form_with model: play, url: [play.song, play], local: true do |form| %>
  <%= render 'shared/errors', errors: play.errors %>

  <div class="form-group">
    <%= form.label :instrument %>
    <%= form.text_field :instrument, class: 'form-control', placeholder: 'Gt&Vo' %>
  </div>

  <div class="form-group">
    <%= form.label :comment %>
    <%= form.text_area :comment, class: 'form-control' %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
<% end %>
