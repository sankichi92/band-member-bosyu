<% provide :title, '曲を追加する' %>

<%= form_with model: @song, local: true do |form| %>
  <%= render 'shared/errors', errors: @song.errors %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :artist %>
    <%= form.text_field :artist, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :url %>
    <%= form.url_field :url, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :notes %>
    <%= form.text_area :notes, class: 'form-control' %>
    <small class="form-text text-muted">
      想定している楽器編成やアレンジ、Key などを入力してください。
    </small>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
<% end %>
